<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#969696"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



        <LinearLayout
            android:background="#ABABAB"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="5dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="WIFI Setting"/>
        </LinearLayout>


        <LinearLayout
            android:layout_marginLeft="15dip"
            android:layout_marginTop="15dip"
            android:layout_marginBottom="15dp"
            android:id="@+id/wifisetting"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="selectWifi">
                <TextView
                    android:textStyle="bold"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="WIFI bind"
                    />
                <RelativeLayout
                    android:layout_marginLeft="170dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <Switch
                        android:id="@+id/wiperSwitch1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="SSID:"/>

                <EditText
                    android:textSize="12dp"
                    android:id="@+id/ssid"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
                <!--android:text="MZtest"-->

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="PWD:"/>
                <EditText
                    android:inputType="textPassword"
                    android:textSize="12dp"
                    android:id="@+id/pwd"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"/>
                <!--android:text="Meizu@test123"-->

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:background="#ABABAB"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="5dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Performance Setting"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="15dip"
            android:layout_marginTop="15dip"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="PerformanceService"/>
            <RelativeLayout
                android:layout_marginLeft="20dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Switch
                    android:id="@+id/wiperSwitch3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </RelativeLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="15dip"
        android:layout_marginTop="15dip"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Start  Performance"/>
        <RelativeLayout
            android:layout_marginLeft="20dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Switch
                android:id="@+id/wiperSwitch5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="15dip"
            android:layout_marginTop="15dip"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="Collection of Heap data(ROOT)"/>
            <RelativeLayout
                android:layout_marginLeft="20dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Switch
                    android:id="@+id/wiperSwitch4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </RelativeLayout>
        </LinearLayout>



        <LinearLayout
            android:layout_marginLeft="15dip"
            android:layout_marginTop="15dip"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="HZ（s）"/>
            <RelativeLayout
                android:layout_marginLeft="170dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/time"
                    android:layout_width="50sp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size" >
                </TextView>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <SeekBar
                android:id="@+id/timeline"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:max="19"
                android:maxHeight="2.0dip"
                android:minHeight="2.0dip"
                android:paddingBottom="@dimen/layout_vertical_margin_small"
                android:paddingLeft="16.0dip"
                android:paddingRight="16.0dip"
                android:progress="5"
                android:progressDrawable="@drawable/custom_seekbar"
                android:thumb="@drawable/seekbar_thumb"
                android:indeterminate="false" />


        </LinearLayout>
        <RelativeLayout
            android:id="@+id/select_package"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="15dip"
            android:layout_marginBottom="15dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/select_package_lin"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textStyle="bold"
                    android:layout_width="fill_parent"
                    android:layout_height="20dp"
                    android:textSize="18dp"
                    android:text="Select Package"/>
                <TextView
                    android:id="@+id/packagename_text"
                    android:layout_width="fill_parent"
                    android:layout_height="20dp"
                    android:textSize="14dp"
                    />
            </LinearLayout>
            <ImageView

                android:layout_toRightOf="@+id/select_package_lin"
                android:id="@+id/image1"
                android:src="@drawable/right"
                android:layout_width="30dp"
                android:layout_height="40dp"
                />

        </RelativeLayout>


        <LinearLayout
            android:background="#ABABAB"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="5dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Other Setting"/>
        </LinearLayout>


        <LinearLayout
            android:layout_marginLeft="15dip"
            android:layout_marginTop="15dip"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="E-Mail TO:"/>

            <EditText
                android:textSize="12dp"
                android:id="@+id/email"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="15dip"
        android:layout_marginTop="15dip"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="E-Mail CC:"/>

        <EditText
            android:textSize="12dp"
            android:id="@+id/email_cc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:layout_marginLeft="15dip"
        android:layout_marginTop="15dip"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Server:"/>

        <EditText
            android:textSize="12dp"
            android:id="@+id/server"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="15dip"
            android:layout_marginTop="15dip"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="logcat(ROOT)"/>
            <RelativeLayout
                android:layout_marginLeft="150dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Switch
                    android:id="@+id/wiperSwitch2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:onClick="openFile"
            android:layout_marginLeft="15dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/logpath"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="open logcat"/>
        </LinearLayout>




        <LinearLayout
            android:onClick="openFile"
            android:layout_marginLeft="15dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        </LinearLayout>

        <LinearLayout
            android:onClick="clear"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="8dip">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:textSize="19dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="clear history"
                    />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="click will clear history"/>

            </LinearLayout>


        </LinearLayout>





</LinearLayout>
    </ScrollView>